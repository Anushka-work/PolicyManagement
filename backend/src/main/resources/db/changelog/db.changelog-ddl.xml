<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="1" author="copilot">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)"/>
        </createTable>

        <createTable tableName="issue_policy">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="plan_type" type="VARCHAR(50)"/>
            <column name="tenure" type="INT"/>
            <column name="premium_frequency" type="VARCHAR(50)"/>
            <column name="insured_amount" type="DOUBLE"/>
            <column name="issuance_date" type="DATE"/>
            <column name="maturity_date" type="DATE"/>
            <column name="premium_amount" type="DOUBLE"/>
            <column name="maturity_amount" type="DOUBLE"/>
            <column name="policy_holder_name" type="VARCHAR(255)"/>
            <column name="dob" type="DATE"/>
            <column name="address" type="VARCHAR(500)"/>
            <column name="mobile_number" type="VARCHAR(20)"/>
            <column name="income_source" type="VARCHAR(255)"/>
            <column name="total_income" type="DOUBLE"/>
            <column name="policy_status" type="VARCHAR(50)"/>
            <column name="nominee_name" type="VARCHAR(255)"/>
            <column name="nominee_contact_number" type="VARCHAR(20)"/>
            <column name="nominee_dob" type="DATE"/>
            <column name="nominee_relationship" type="VARCHAR(100)"/>
            <column name="nominee_percentage_stake" type="VARCHAR(100)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="issue_policy" baseColumnNames="user_id" referencedTableName="users" referencedColumnNames="id" constraintName="fk_issue_policy_user"/>

        <createTable tableName="apply_claims">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="claim_amount" type="DOUBLE"/>
            <column name="claim_type" type="VARCHAR(100)"/>
            <column name="claim_documents" type="VARCHAR(500)"/>
            <column name="status" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
